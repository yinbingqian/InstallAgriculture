<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackal_bg" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        android:layout_above="@+id/textlayout"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/cancel_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/close" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/cancel_btn"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/cm1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_btn"
            android:layout_toRightOf="@+id/imageView1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:text="农家茄子农家茄子农家茄子农家茄子农家茄子农家茄家茄子"
                android:textColor="@color/gray_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="¥ 4.5/KG"
                android:textColor="@color/text_green"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textlayout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_above="@+id/garyline"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:id="@+id/text11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="购买数量："
            android:textColor="@color/gray_text"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/add_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/add" />

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="36dp"
            android:layout_height="22dp"
            android:layout_toLeftOf="@+id/add_img"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/gray_text"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/subtract_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_toLeftOf="@+id/count_tv"
            android:background="@drawable/subtract" />
    </RelativeLayout>

    <View
        android:id="@+id/garyline"
        android:layout_width="fill_parent"
        android:layout_height="114dp"
        android:layout_above="@+id/submit_btn"
        android:background="@color/userlayout_bg" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow_bg"
        android:gravity="center"
        android:text="确认预订"
        android:textColor="@color/white"
        android:textSize="17dp" />

</RelativeLayout>