<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_login_btn" >

    <ImageView
        android:id="@+id/topButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_top_bar_category" />

    <ImageView
        android:id="@+id/calButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:src="@drawable/calbtn" />

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/calButton"
        android:layout_toRightOf="@+id/topButton"
        android:background="@drawable/corners_whitebg"
        android:gravity="bottom|left"
        android:iconifiedByDefault="false"
        android:inputType="textFilter"
        android:queryHint="搜索" >
    </SearchView>

</RelativeLayout>